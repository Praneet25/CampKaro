<% layout('layouts/boilerplate') %>
<div class="row col-8 offset-2">
    <h1 class="col-6 offset-3 mb-3">Add new campground</h1>
    <div class="col-8 offset-2">
        <form method="POST" action="/campgrounds" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input type="text" class="form-control" name="campground[title]" id="title" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">location</label>
                <input type="text" class="form-control" name="campground[location]" id="location" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <div class="form-file custom-file">
                    <label class="form-label" for="image">Upload Images</label>
                    <input type="file" class="form-control custom-file-input" id="image" name="image" multiple>
                    <label class="custom-file-label" for="image">
                </div>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text">â‚¹</span>
                <input type="text" class="form-control" name="campground[price]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>

            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description </label>
                <textarea class="form-control" id="description" rows="3" name="campground[description]"
                    required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <button type="submit" class="btn btn-success mb-3">Add new campground</button>
        </form>
        <a href="/campgrounds">home</a>
    </div>

</div>